<% include ./partials/header-top %>

    <title>login</title>
    <link rel="stylesheet" href="/stylesheets/login.css">

<% include ./partials/header-bot %>

    <section id="content" class="container d-flex flex-column align-items-center justify-content-center">
        <h1 class="header mb-4">ReviewMyResume</h1>

        <form action="/login" method="POST">

            <div class="form-group row justify-content-center">
                <div class="col-12 col-md-4">
                    <input class="form-control" type="text" name="username" id="uname" placeholder="username" required>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-12 col-md-4">
                    <input class="form-control" type="password" name="password" id="password" placeholder="password" required>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button id="log-in-btn" class="mt-2 btn">log in</button>
            </div>
        </form>

        <p class="mt-3">Don't have an account yet? Sign up <a href="/register">here</a></p>

    </section>

